char poem[2048][1024] = {};
for (int 1 = 0; i < ..,; i++)
{
  fgets (&poem[i], 1024 - 1, f)
}

PrintText(char poem[][1024])
{
  for (int i = 0;..;..)
  {
    puts (poem[i])
  }
}
//call
PrintText(char poem[][1024])
{
  for (int i = 0;..;..)
    for (int j = 0; poem[i][j]; j++)
    putchar (poem[i][j]]);
}
//call

